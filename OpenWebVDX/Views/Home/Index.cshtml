<!--Placeholder for home page content -->
<div style="height:50px"></div>

<!-- Return to top nav-->
<div class="container-fluid appnav">
    <div class="row">
        <div class="col-xs-12 appnav-item">
            <a class="unstyled-link" id="to_top" href="">
                <span style="font-size:50px" class="glyphicon glyphicon-arrow-up"></span>
            </a>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    $("#to_top").click(function (e) {
        e.preventDefault();
        $('html, body').animate({ scrollTop: 0}, 'slow');
    });
</script>